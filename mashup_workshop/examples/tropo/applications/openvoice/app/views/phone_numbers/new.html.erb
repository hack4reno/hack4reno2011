<h1>New Phone Number</h1>

<% form_for([:user, @phone_number]) do |f| %>
    <%= f.error_messages %>
    <p>
      <%= f.label :name %><br/>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :number %><br/>
      <%= f.telephone_field :number %>
    </p>

    <p>
      <%= f.label :default %>
      <%= f.check_box :default %><br/>
    </p>

    <p>
      <%= f.label :forward %>
      <%= f.check_box :forward %><br/>
    </p>

    <p>
      <%= f.submit 'Create' %>
    </p>
<% end %>

<%= link_to 'Back', user_phone_numbers_path(current_user) %>